---
import Layout from '../layouts/Layout.astro';
import { testimonials } from '../data/testimonials';
---

<Layout title="Testimonials - AIPlatformDataSecurity">
  <div class="hero">
    <h1>Member Testimonials</h1>
    <p class="hero-subtitle">Stories from Our Global Community</p>
  </div>

  <section class="content">
    <div class="intro-section">
      <h2>What Our Members Say</h2>
      <p>
        Our community has helped hundreds of IT professionals grow their careers and develop resilience in the face of challenges. 
        Here's what some of our members have to say about their experience with AIPlatformDataSecurity.
      </p>
    </div>

    <div class="testimonials-grid">
      {testimonials.map((testimonial) => (
        <div class="testimonial-card">
          <div class="testimonial-content">
            <blockquote>
              "{testimonial.content}"
            </blockquote>
          </div>
          <div class="testimonial-author">
            <div class="author-info">
              <h3>{testimonial.name}</h3>
              <p class="author-title">{testimonial.title}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="stats-section">
      <h2>Community Impact</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number">500+</div>
          <div class="stat-label">Active Members</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">50+</div>
          <div class="stat-label">Countries</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">200+</div>
          <div class="stat-label">Career Transitions</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">5+</div>
          <div class="stat-label">Years of Excellence</div>
        </div>
      </div>
    </div>

    <div class="join-section">
      <h2>Ready to Join Our Community?</h2>
      <p>
        Experience the same growth and transformation that our members have achieved. 
        Are you ready to embrace honest feedback and accelerate your career?
      </p>
      <a href="/contact" class="join-button">Join Us Today</a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: var(--gradient-success);
    border-radius: 1rem;
    margin-bottom: 3rem;
    animation: slideInDown 0.8s ease-out;
    box-shadow: 0 10px 30px rgba(67, 233, 123, 0.3);
  }

  @keyframes slideInDown {
    from {
      transform: translateY(-50px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .intro-section {
    background-color: var(--card-bg);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    text-align: center;
  }

  .intro-section h2 {
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-size: 1.75rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background-color: var(--card-bg);
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    padding: 2rem;
    position: relative;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
  }

  .testimonial-card:nth-child(odd) { animation-delay: 0.1s; }
  .testimonial-card:nth-child(even) { animation-delay: 0.3s; }

  @keyframes fadeInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .testimonial-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 15px 40px rgba(156, 136, 255, 0.4);
    border-color: var(--purple-accent);
  }

  .testimonial-card::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: 20px;
    font-size: 4rem;
    color: var(--pink-accent);
    opacity: 0.5;
    font-family: serif;
  }

  .testimonial-content {
    margin-bottom: 1.5rem;
  }

  .testimonial-content blockquote {
    font-style: italic;
    line-height: 1.6;
    color: var(--text-color);
    margin: 0;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-info h3 {
    background: var(--gradient-tertiary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.25rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .author-title {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .stats-section {
    background-color: var(--card-bg);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    text-align: center;
  }

  .stats-section h2 {
    color: var(--accent-color);
    margin-bottom: 2rem;
    font-size: 1.75rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    background-color: var(--bg-color);
    padding: 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    animation: scaleIn 0.6s ease-out;
    animation-fill-mode: both;
  }

  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }

  .stat-card:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(255, 212, 59, 0.4);
    border-color: var(--warning-color);
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--text-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .join-section {
    background-color: var(--card-bg);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    text-align: center;
  }

  .join-section h2 {
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-size: 1.75rem;
  }

  .join-button {
    display: inline-block;
    margin-top: 1rem;
    padding: 1rem 2rem;
    background: var(--gradient-secondary);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(240, 147, 251, 0.4);
  }

  .join-button:hover {
    background: var(--gradient-success);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(67, 233, 123, 0.6);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>